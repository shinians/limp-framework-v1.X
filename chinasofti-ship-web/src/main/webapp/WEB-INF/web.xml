    <!--统一设置编码 编码强转 过滤器-->

    <filter >
        <filter-name> DruidWebStatFilter </filter-name >
        <filter-class> com.alibaba.druid.support.http.WebStatFilter </filter-class>
        <init-param>
            <param-name> exclusions </param-name >
            <param-value> *.js ,*.gif,*.jpg,*.png,*.css,*.ico,/druid/* </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name> DruidWebStatFilter </filter-name>
        <!--<url-pattern>*.action</url-pattern>-->
        <url-pattern>/*</url-pattern>
    </filter-mapping >

    <servlet>
        <servlet-name> DruidStatView </servlet-name>
        <servlet-class> com.alibaba.druid.support.http.StatViewServlet </servlet-class>
        <!--<init-param>
            &lt;!&ndash; 允许访问监控界面的IP &ndash;&gt;
            <param-name>allow</param-name>
            <param-value>127.0.0.1/2,192.168.1.113</param-value>
        </init-param>
        <init-param>
            &lt;!&ndash; 用户名 &ndash;&gt;
            <param-name>loginUsername</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            &lt;!&ndash; 密码 &ndash;&gt;
            <param-name>loginPassword</param-name>
            <param-value>123456</param-value>
        </init-param>-->
    </servlet>

    <servlet-mapping>
        <servlet-name> DruidStatView </servlet-name>
        <url-pattern >/druid/*</url-pattern>
    </servlet-mapping >

    <!-- 编码过滤器 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern><!--修正前/*：*.action-->
    </filter-mapping>


    <!--spring监听器-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!--防止内存溢出-->
    <listener>
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
    </listener>
        <!--新增-->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <!--新增-->
    <listener>
        <listener-class>com.limp.framework.boss.listener.EnvironmentContenxtListener</listener-class>
    </listener>


    <!--前端控制器springmvc Servlet-->
    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <!--<param-value>/WEB-INF/spring-bean.xml,/WEB-INF/hibernate-config.xml</param-value>-->
            <!--<param-value>classpath:/spring/springmvc.xml</param-value>-->
            <!---->
            <param-value>classpath*:/spring/springmvc.xml,classpath*:/spring/spring-jedis.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern> <!--/*--> <!--*.action-->
    </servlet-mapping>

    <!--定义不需要过滤的静态文件-->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <!-- 注意添加/*格式，否则导致字体文件或者其他类型文件被拦截-->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/systemsite/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/systemsite/ztree/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/chinasofti/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/plug/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ttf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff</url-pattern>
    </servlet-mapping>

    <!--如果不设，默认为web.root,但最好设置，以免项目间冲突,新加——如果:TODO 如不需注释掉即可-->
    <!--<context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>limp.root</param-value>
    </context-param>-->

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/404.jsp</location>
    </error-page>
    <!--405页面定义用来访问本页面的 HTTP 谓词不被允许（方法不被允许-->
    <error-page>
        <error-code>403</error-code>
        <location>/404.jsp</location>
    </error-page>
    <!-- 配置SESSION超时，单位是分钟 -->
    <session-config>
        <session-timeout>180</session-timeout>
    </session-config>

    <!--定义欢迎页面-->
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
